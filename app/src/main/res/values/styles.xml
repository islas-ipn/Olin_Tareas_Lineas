<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">@color/White</item>
        <!--<item name="windowMinWidthMajor">80dp</item>-->
        <!--<item name="windowMinWidthMinor">80dp</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="tsk_row">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="tsk_title" parent="tsk_row">
        <item name="android:textColor">@color/color_900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DynamicFormQuestionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="DynamicFormQuestionError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">@string/content_description</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:src">@drawable/error_image</item>
    </style>

    <style name="DynamicFormAnswerContainerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@color/color_50</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="DynamicFormQuestion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_900</item>

    </style>

    <style name="DynamicFormError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/error</item>
    </style>

    <style name="DynamicFormRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/White</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="DynamicFormAnswer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/color_900</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DynamicImageViewQuestion">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/selector_dynamic_form_file</item>
    </style>

    <style name="DynamicFormAnswerContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/layout_bg_dynamic</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>


</resources>
