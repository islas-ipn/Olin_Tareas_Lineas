<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rowReqComment"
    android:orientation="vertical">

    <RelativeLayout style="@style/DynamicFormAnswerContainerText">

        <ImageView
            android:id="@+id/ivOptionCommentDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_cancel"
            android:layout_alignBottom="@+id/etOptionCommentAnswer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <mx.com.pendulum.utilities.views.CustomEditText
            android:id="@+id/etOptionCommentAnswer"
            style="@style/DynamicFormAnswer"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/ivOptionCommentDelete"
            android:layout_toStartOf="@+id/ivOptionCommentDelete" />
    </RelativeLayout>

</LinearLayout>